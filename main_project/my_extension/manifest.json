{
    "manifest_version": 3,
    "name": "AI Chat Assistant",
    "version": "1.0",
    "description": "AI Chat in side panel",
    "permissions": [
        "sidePanel",
        "webRequest",
        "cookies",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "http://localhost:8000/*",
        "https://accounts.google.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "AI Chat",
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    }
}
